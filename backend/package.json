{
  "name": "neurelix-backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "db:apply:supabase": "tsx scripts/apply-supabase-migrations.ts",
    "db:migrate": "node-pg-migrate up -m migrations --envPath .env --database-url-var DATABASE_URL --migration-filename-format utc",
    "db:migrate:up": "node-pg-migrate up -m migrations --envPath .env --database-url-var DATABASE_URL --migration-filename-format utc"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.2.0",
    "@fastify/websocket": "^10.0.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "fastify": "^4.28.1",
    "pg": "^8.13.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.16.5",
    "@types/pg": "^8.11.11",
    "node-pg-migrate": "^8.0.4",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
}
